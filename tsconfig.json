{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",                   
    "sourceMap": true,                               
    "outDir": "./dist",                              
    "esModuleInterop": true,                         
    "strict": true,                                  
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*", "src/tests/**.test.ts"],
  "exclude": ["node_modules"]
}

